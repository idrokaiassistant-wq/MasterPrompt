// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  telegramId  BigInt?  @unique
  username    String?
  email       String?  @unique
  firstName   String?
  lastName    String?
  phone       String?
  language    String   @default("uz")
  isActive    Boolean  @default(true)
  balance     Float    @default(0)
  lastSeenAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Subscription info
  subscriptionId String?
  subscription   Subscription? @relation(fields: [subscriptionId], references: [id])
  subExpiresAt   DateTime?

  // Relations
  prompts     Prompt[]
  templates   Template[]
  analytics   Analytics[]
  sessions    Session[]
  payments    Payment[]
  
  @@index([telegramId])
  @@index([email])
  @@index([username])
}

model Subscription {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "Free", "Pro", "Premium"
  price       Float
  currency    String   @default("UZS")
  duration    Int      // in days
  features    Json     // List of features or limits (e.g., {"daily_prompts": 50})
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       User[]
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  amount        Float
  currency      String   @default("UZS")
  provider      String   // "click", "payme", "stripe"
  transactionId String?  @unique // Provider's transaction ID
  status        PaymentStatus @default(PENDING)
  metadata      Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([transactionId])
}

model Prompt {
  id              String   @id @default(cuid())
  userId          String
  content         String   @db.Text
  model           String
  language        String   @default("uz")
  temperature     Float    @default(0.7)
  maxTokens       Int      @default(2000)
  response        String?  @db.Text
  tokensUsed      Int?
  processingTime  Int?     // milliseconds
  status          PromptStatus @default(COMPLETED)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@index([model])
  @@index([status])
}

model Template {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  content     String   @db.Text
  category    String?
  tags        String[] // Array of tags
  isPublic    Boolean  @default(false)
  isFeatured  Boolean  @default(false)
  usageCount  Int      @default(0)
  rating      Float    @default(0)
  ratingCount Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([category])
  @@index([isPublic])
  @@index([isFeatured])
  @@index([usageCount])
}

model Analytics {
  id           String   @id @default(cuid())
  userId       String
  eventType    AnalyticsEvent
  eventData    Json     // JSON data for flexible analytics
  timestamp    DateTime @default(now())
  sessionId    String?
  
  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([eventType])
  @@index([timestamp])
  @@index([sessionId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

enum PromptStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  CANCELLED
  REFUNDED
}

enum AnalyticsEvent {
  PROMPT_GENERATED
  PROMPT_SHARED
  TEMPLATE_CREATED
  TEMPLATE_USED
  USER_REGISTERED
  USER_LOGIN
  USER_LOGOUT
  ERROR_OCCURRED
  TELEGRAM_COMMAND
  TELEGRAM_CALLBACK
  SUBSCRIPTION_PURCHASED
  SUBSCRIPTION_EXPIRED
  PAYMENT_INITIATED
  PAYMENT_COMPLETED
}
